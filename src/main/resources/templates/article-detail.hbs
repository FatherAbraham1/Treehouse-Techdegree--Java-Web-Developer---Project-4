{{#partial "content"}}
            <div class="entry-list single">
                <article>
                    <h1>{{article.title}}</h1>
                    <time datetime="{{ article.timeStringShort }}">{{ article.timeStringLong }}</time>
                    <div class="entry">
                        <p>{{article.text}}</p>
                        <p><a class="link" href="/{{ article.slug }}/edit">Edit Entry</a></p>
                    </div>
                </article>
            </div>
        </div><!-- .container -->
    </section>
    <section class="entry-comments">
        <div class="container">
            <h2>Comments</h2>
            {{#each comments}}
            <div class="comment">
                <strong>{{this.author}}</strong>
                <time datetime="{{this.timeCreated}}">{{this.timeCreatedFancy}}</time>
                <p>{{this.text}}</p>
            </div>
            {{/each}}
            <div class="new-comment">
                <form action="/comment" method="post">
                    <label for="name"> Name</label>
                    <input type="text" name="name"><br>
                    <label for="comment">Comment</label>
                    <textarea rows="5" name="comment"></textarea>
                    <input type="submit" value="Post Comment" class="button">
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}